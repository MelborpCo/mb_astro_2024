---
import { renderRichText } from '@storyblok/astro'

const { story } = Astro.props
---

<div class="contacto_wrap">
    <div class="contacto_int">
        <address>
            <p>
                <span class="a1">{story.content.direccion_1}</span>
                <span class="a2">{story.content.direccion_2}</span>
                <span class="a3">{story.content.direccion_3}</span>
                <span class="a4">{story.content.direccion_4}</span>
            </p>
        </address>
    </div>
    <div class="contacto">
        <div class="contacto_info">
            <div class="contacto_info_int">
                <div class="chat">
                    <a class="wap" href={`https://wa.me/57${story.content.whataspp}`} target="_blank">
                        <i class="fab fa-whatsapp"></i> Whatsapp
                    </a>
                    <a class="fac" href="http://m.me/melborpco" target="_blank">
                        <i class="fab fa-facebook-messenger"></i> Facebook
                    </a>
                </div>
                <div class="mails">
                    <a href="mailto:info@melborp.co ">info@melborp.co</a>
                    <a href="mailto:brief@melborp.co">brief@melborp.co</a>
                </div>
                <div class="tels" v-html="tels"></div>
                <div class="hvs">
                    <p>
                        <b>Hojas de vida</b>
                    </p>
                    <a href="mailto:welcome@melborp.co">welcome@melborp.co</a>
                </div>
                <div class="social">
                    <a href="https://www.behance.net/melborp" title="Behance" target="_blank">
                        <i class="fab fa-behance"></i>
                    </a>
                    <a href="https://www.instagram.com/melborp/" title="Instagram" target="_blank">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="https://es-la.facebook.com/melborpco/" title="Facebook" target="_blank">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="https://www.linkedin.com/company/melborp/" title="Linkedin" target="_blank">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
                <div class="nit">MBP GROUP SAS | NIT: 900490170</div>
            </div>
        </div>
    </div>
    <div class="contacto-img-1">
        <img src={story.content.imagenes[0].filename + '/m/'} class="vlazy" />
    </div>
    <div class="contacto-img-2">
        <img src={story.content.imagenes[1].filename + '/m/'} class="vlazy" />
    </div>
</div>

<style>
    .contacto_wrap {
        @apply block w-screen pt-32 md:grid md:min-h-screen md:grid-cols-12 md:grid-rows-6 md:pt-0;

        .contacto-img-1 {
            @apply z-0 hidden md:col-span-4 md:col-start-1 md:row-span-4 md:row-start-1 md:block;
            img {
                @apply h-full w-full object-cover;
            }
        }
        .contacto-img-2 {
            @apply z-0 row-span-2 row-start-4 hidden md:col-span-3 md:col-start-10 md:block;
            img {
                @apply h-full w-full object-cover;
            }
        }
        .contacto_int {
            @apply z-10 row-span-3 row-start-2 mb-8 block w-full md:col-span-8 md:col-start-3 md:mb-0 md:self-center;
            address {
                @apply not-italic;
                p {
                    @apply mx-4 md:mx-0 md:grid md:grid-cols-12 md:grid-rows-3 md:gap-x-4 md:gap-y-0;

                    span {
                        @apply leading-none md:block;
                        &.a1 {
                            @apply col-span-1 row-span-1 row-start-1 text-4xl uppercase md:col-span-8 md:col-start-3 md:text-5xl xl:text-6xl;
                        }
                        &.a2 {
                            @apply row-span-1 row-start-2 text-right text-4xl uppercase md:col-span-8 md:col-start-1 md:text-5xl xl:text-6xl;
                        }
                        &.a3 {
                            @apply row-span-1 row-start-2 self-center text-base uppercase md:col-span-2 md:col-start-9 md:text-lg xl:text-xl;
                        }
                        &.a4 {
                            @apply row-span-1 row-start-3 text-center text-4xl md:col-span-10 md:col-start-2 md:text-5xl xl:text-6xl;
                        }
                    }
                }
            }
        }
        .contacto {
            @apply z-10 mb-8 flex w-full flex-col justify-between md:col-span-10 md:col-start-1 md:row-span-2 md:row-start-5 md:mb-0 md:self-end;
            .contacto_info {
                @apply mx-auto mt-auto w-full max-w-9xl;
                .contacto_info_int {
                    @apply mx-4 text-sm md:mx-16 md:grid md:grid-cols-12 md:grid-rows-2 md:gap-x-4 md:gap-y-0 md:text-lg;
                    a {
                        @apply transition-all duration-300 ease-in-out;
                        &:hover {
                            @apply text-black;
                        }
                    }
                    .mails {
                        @apply mb-8 self-start md:col-span-2 md:col-start-4 md:row-span-1 md:row-start-1 md:mb-0;
                        a {
                            @apply mb-0 block text-base font-light;
                        }
                    }
                    .chat {
                        @apply mb-8 self-start text-base font-light md:col-span-2 md:col-start-1 md:row-span-1 md:row-start-1 md:mb-0;

                        a {
                            @apply mb-2 block rounded-full border px-2 py-1.5 text-center text-sm transition-all;
                            &.wap {
                                @apply border-green-100 text-green-500 hover:border-green-400;
                            }
                            &.fac {
                                @apply border-blue-100 text-blue-500 hover:border-blue-400;
                            }
                            i {
                                @apply text-sm;
                            }
                        }
                    }
                    .tels {
                        @apply mb-8 self-start text-base font-light md:col-span-2 md:col-start-7 md:row-span-1 md:row-start-1 md:mb-0;
                        p {
                            @apply mb-3;
                        }
                        :deep() a {
                            @apply text-base;
                        }
                    }
                    .hvs {
                        @apply mb-8 mt-12 self-start text-base font-light md:col-span-2 md:col-start-10 md:row-span-1 md:row-start-1 md:mb-0 md:mt-0;
                    }
                    .social {
                        @apply mt-16 flex space-x-4 font-light md:col-span-4 md:col-start-1 md:row-span-1 md:row-start-2 md:mt-2 md:self-end md:pb-8;
                        a {
                            @apply inline-block text-xl md:text-lg;
                        }
                    }
                    .nit {
                        @apply mt-16 flex space-x-4 text-sm font-light md:col-span-4 md:col-start-9 md:row-span-1 md:row-start-2 md:mt-2 md:self-end md:justify-self-end md:pb-8 md:text-right;
                    }
                }
            }
        }
    }
</style>
